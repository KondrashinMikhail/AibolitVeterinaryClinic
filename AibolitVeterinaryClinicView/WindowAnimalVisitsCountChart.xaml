<Window x:Class="AibolitVeterinaryClinicView.WindowAnimalVisitsCountChart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AibolitVeterinaryClinicView"
        xmlns:DVC="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
        mc:Ignorable="d"
        Title="Количество визитов у животных" Loaded="Window_Loaded"  Height="450" Width="800">
    <Grid>
        <DVC:Chart x:Name="AnimalsVisitsCount" Margin="5,5">
            <DVC:ColumnSeries Title="Кол-во визитов"  IndependentValueBinding="{Binding Item1}" DependentValueBinding="{Binding Item2}"/>
        </DVC:Chart>
    </Grid>
</Window>
